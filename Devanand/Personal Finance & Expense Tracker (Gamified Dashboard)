    <!-- MAIN -->
    <main>
      <div class="grid">
        <div>
          <div class="cards">
            <div class="stat">
              <div class="muted">Total Spent</div>
              <div class="big" id="totSpent">$0.00</div>
              <div class="small">This month</div>
